<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/abc_oval_shape_white"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:gravity="center"
            android:text="问题反馈"
            android:textColor="#333333"
            android:textSize="20sp"
            android:visibility="visible" />


        <RadioGroup
            android:id="@+id/selectserver_radiogrp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical">

            <RadioButton
                android:gravity="center_vertical"
                android:id="@+id/radiobtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   无法播放"

                android:checked="false"
                android:button="@drawable/radio_button_style"
                android:textColor="@color/text_color"
                android:textSize="18dp">

            </RadioButton>

            <RadioButton
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:id="@+id/radiobtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   标题与内容不符"
                android:textColor="@color/text_color"
                android:checked="false"
                android:button="@drawable/radio_button_style"
                android:textSize="18dp"></RadioButton>

            <RadioButton
                android:layout_marginTop="5dp"
                android:id="@+id/radiobtn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   无字幕或无声音"
                android:checked="false"
                android:gravity="center_vertical"
                android:button="@drawable/radio_button_style"
                android:textColor="@color/text_color"
                android:textSize="18dp"></RadioButton>

            <RadioButton
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:id="@+id/radiobtn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   播放的速度慢"
                android:checked="false"
                android:button="@drawable/radio_button_style"
                android:textColor="@color/text_color"
                android:textSize="18dp"></RadioButton>
        </RadioGroup>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dedede" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/dialog_left_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:gravity="center"
                android:text="取消"
                android:textSize="16sp"
                android:textColor="@color/main_color" />

            <View
                android:id="@+id/dialog_line"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#dedede" />

            <TextView
                android:id="@+id/dialog_right_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:text="确认"
                android:textColor="@color/main_color" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
